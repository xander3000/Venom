<div class="top-actions">
  <%= link_to_remote(image_tag("icons/page_edit.png"), :url => edit_backend_raw_material_url(@raw_material),:method => :get,:html => {:title => "Editar #{@raw_material.name}",:class => "button"}) %>
  
  <%#= link_to_remote(image_tag("icons/page_delete.png"), :url => backend_raw_material_url(@raw_material),:confirm => "¿Está seguro que desea eliminar '#{@raw_material.name}'?",:html => {:title => "Eliminar #{@raw_material.name}",:class => "button"}) %>
