<%= include_javascript("jquery.dataTables.min.js") %>
<%= include_stylesheet("jquery.datatable.css") %>
<div class="actionsBar right no-print">
  <%= link_to(image_tag("icons/add.png"),new_backend_financial_management_client_advance_url(@client),:class => "button") %>
</div>
<hr/>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="advances" width="100%">
	<thead>
		<tr>
			 <th><%= Accounting::Advance.human_attribute_name("id")%> </th>
			 <th><%= Accounting::Advance.human_attribute_name("doc")%> </th>
			 <th><%= Accounting::Advance.human_attribute_name("date")%> </th>
			 <th><%= Accounting::Advance.human_attribute_name("amount")%> </th>
			 <th><%= Accounting::Advance.human_attribute_name("balance")%> </th>
		</tr>
	</thead>
	<tbody>
	 <% @advances.each do |advance| %>
	  <tr>
		 <td class="center"><%= advance.id.to_code %> </td>
		 <td class="center"><%= advance.doc.name %> </td>
		  <td class="center"><%= l advance.date.to_date %> </td>
		  <td class="right highlight"><%= number_to_currency(advance.amount, :delimiter => ".", :separator => ",", :unit => "")%></td>
		  <td class="right"><%= number_to_currency(advance.balance, :delimiter => ".", :separator => ",", :unit => "")%></td>
	  </tr>
	  <% end %>
	</tbody>
</table>

<br/>


<script type="text/javascript">
  var oTable;

  $(document).ready(function() {
		oTable =  $('#advances').dataTable({
            oLanguage: {
                sUrl: "/javascripts/i18n/jquery.DataTables-es.txt"
            }
        });
  });
</script>
