<div id="" class="content_form">
    <% f.inputs "Datos generales" do %>
		<%= f.input :subject,:label => false,:input_html  => {:class => "top",:placeholder => "Asunto"}%>
		<%= f.input :crm_meeting_type %>
		<div class="subc c50l">
		  <% f.inputs do  %>

			 <%= f.input :start_date,:input_html => {:class => "date"} %>
			 <%= f.input :reminders_popup,:as => :select,:collection => @reminders_popup,:input_html => {} %>
			 <%= f.input :assigned_to,:input_html => {} %>
			 <%= f.input :duration_hours,:input_html => {:class => "",:size => "5"} %>
			 <%= f.input :location,:input_html => {:class => ""} %>
		<% end %>
		</div>
		<div class="subc c50r">
		  <% f.inputs do  %>
			 <%= f.input :start_time,:input_html => {:class => "time"} %>
			  <%= f.input :email_all_invitees,:as => :select,:collection => @email_all_invitees,:input_html => {} %>
			  <%= f.input :related_to_type,:as => :select,:collection => @related_to, :input_html => {:onchange => "autocomplete_for_relation()"} %>
			  <%= f.input :related_to_name,:as => :string,:wrapper_html => {:class => ""},:input_html => {:class => @meeting.new_record? ? "hidden" : "",:size => 16} %>
			 <%= f.input :related_to_id,:as => :string,:wrapper_html => {:class => "hidden"},:input_html => {:size => 16} %>
		  <% end %>
		</div>
	 <% end %>

  <% f.inputs :class => "" do %>
	 <%= f.input :description,:input_html => {} %>
	 <%= f.input :crm_contact,:input_html => {} %>
  <% end %>
  
</div>

<script type="text/javascript">
  
  
	 function relation_after_complete(item){
		  switch (item.code_response) {
        case ("ok"):
				$("#crm_meeting_related_to_id").val(item.id)
            break;
        case ("no-ok"):
            alert('no-ok');
            break;
        case ("no-found"):
			 alert_error('Cuenta no registrada');
			 $("#crm_meeting_related_to_name").val("")
            break;
        default:
            alert('problemas buscando');
	  }
	 }

		 function autocomplete_for_relation(){
				  if($('#crm_meeting_related_to_type').val() != "")
						$("#crm_meeting_related_to_name").autocomplete({
							source: "<%= autocomplete_for_relation_backend_financial_management_customer_management_meetings_url %>?related_to_type=" + $('#crm_meeting_related_to_type').val(),
							minLength: 3,
							select: function( event, ui ) {
							  if(ui.item){
								 relation_after_complete(ui.item);
							 }
							}
						}).show("slow");
					 else
						$("#crm_meeting_related_to_name").hide()
	 }


  		$(document).ready(function(){

		  $(".date").datepicker({
          changeMonth: true,
			 changeYear: true,
          dateFormat: 'yy-mm-dd'
        }).attr('readonly',true);
		  
		  $(".time").timepicker({
			 timeFormat: "hh:mm TT"
        });

		 // $("#crm_meeting_related_to_type_input").append("<input type='text' size='10' name='crm_meeting[start_date]'/>")


		});
</script>