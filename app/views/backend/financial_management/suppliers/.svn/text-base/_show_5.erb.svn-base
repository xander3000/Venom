<%= include_javascript("jquery.dataTables.min.js") %>
<%= include_stylesheet("jquery.datatable.css") %>
<div class="actionsBar right no-print">
  
</div>
<hr/>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="credit_notes" width="100%">
	<thead>
		<tr>
			 <th><%= AccountPayable::SupplierCreditNote.human_attribute_name("id")%> </th>
			 <th><%= AccountPayable::SupplierCreditNote.human_attribute_name("reference")%> </th>
			 <th><%= AccountPayable::SupplierCreditNote.human_attribute_name("create_by")%> </th>
			<th><%= AccountPayable::SupplierCreditNote.human_attribute_name("created_at")%> </th>
			<th><%= AccountPayable::SupplierCreditNote.human_attribute_name("sub_total_amount")%> </th>
			<th><%= AccountPayable::SupplierCreditNote.human_attribute_name("tax_amount")%> </th>
			<th><%= AccountPayable::SupplierCreditNote.human_attribute_name("total_amount")%> </th>
			<th><%= AccountPayable::SupplierCreditNote.human_attribute_name("balance")%> </th>
			 
		</tr>
	</thead>
	<tbody>
	 <% @supplier_credit_notes.each do |credit_note| %>
	  <tr>
		  <td class="center"><%= credit_note.id.to_code %> </td>
		  <td class="center"><%= credit_note.reference %> </td>
		  <td class="center"><%= credit_note.create_by.name %> </td>
		  <td class="center"><%= l credit_note.created_at.to_date %> </td>
		  <td class="right"><%= number_to_currency(credit_note.sub_total_amount, :delimiter => ".", :separator => ",", :unit => "")%></td>
		  <td class="right"><%= number_to_currency(credit_note.tax_amount, :delimiter => ".", :separator => ",", :unit => "")%></td>
		  <td class="right"><%= number_to_currency(credit_note.total_amount, :delimiter => ".", :separator => ",", :unit => "")%></td>
		  <td class="right"><%= number_to_currency(credit_note.balance, :delimiter => ".", :separator => ",", :unit => "")%></td>
	  </tr>
	  <% end %>
	</tbody>
</table>




<script type="text/javascript">
  var oTable;

  $(document).ready(function() {
		oTable =  $('#credit_notes').dataTable({
            oLanguage: {
                sUrl: "/javascripts/i18n/jquery.DataTables-es.txt"
            }
        });
  });
</script>
