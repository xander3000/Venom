<div id="">
  <div class="headerWrap">
    <div class="headerWrapContent">
          <h2>Ver <%= @product_by_budget.product.name %> (<%= @product_by_budget.quantity %>)</h2>
    </div>
  </div>
  <div class="mainWrapContent">
    <div>
      <br/>
      <b>Producto:</b>&nbsp;
      <%= @product_by_budget.product.name %>
    </div>
    <div>
      <br/>
      <b>Cantidad</b>&nbsp;
      <%= text_field 'product_by_budget','quantity',:value => @product_by_budget.quantity,:size => 5,:onblur => remote_function(:url => backend_budget_update_quantity_url(@budget,@product_by_budget.id),:with => "$(this).serialize()") %>
    </div>
    <div>
      <br/>
      <b>Notas:</b>&nbsp;
      <%= @product_by_budget.note %>
    </div>
    
  </div>
  <div class="footerWrap">
    <div class="footerWrapContent right">
      <%#= button_to_function("Guardar", "$(\"#new_comment\").submit()")  %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){ // Script del Navegador
    $("button, input:submit,input:button,a.button ").button();
  });
</script>