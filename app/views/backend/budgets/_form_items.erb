<%= include_javascript("jquery.droplist.js") %>
<%= include_stylesheet("jquery.droplist.css") %>
<div id="form_items">
  <table frame="border" rules="cols" >
    <thead>
      <tr>
        <th class="code">
          Producto
        </th>
        <th class="amount">
          Cant.
        </th>
        <th class="description">
          Componentes
        </th>
        <th class="dimensions">
          Tama√±o
        </th>
        <th class="note">
          Observaciones
        </th>
        <th class="unit_price">
          Precio Unitario
        </th>
        <th colspan="2" class="total_price">
          Total
        </th>
      </tr>
      <tr id="item_product_form">
        <td class="code center">
          <%= text_field_tag "product_code","",:placeholder => "Ingrese producto" %>
          <%= hidden_field_tag "product[product_id]","",:class => "select_price" %>
        </td>
        <td class="amount center">
          <%= text_field_tag "product[quantity]","",:class => "select_price",:size => 5,:readonly => true,:readonly => true %>
        </td>
        <td id="product_components" class="description"></td>
        <td class="dimensions">
          <div id="dimensions_inputs">
            <%= text_field_tag "product[side_dimension_x]","",:class => "select_price dimension",:title => "ancho",:placeholder => "ancho",:size => 4 %>
            X
            <%= text_field_tag "product[side_dimension_y]","",:class => "select_price dimension",:title => "largo",:placeholder => "largo",:size => 4 %>
            <%= hidden_field_tag "page_size_type",0,:class => "select_price dimension" %>
          </div>
        </td>
        <td class="center">
			 <%= text_area_tag  "product[note]","",:class => "left",:size => "25x1" %>
        </td>
        <td class="unit_price right">
          <p id="product_unit_price_currency" class="like_input"></p>
         
         <%= hidden_field_tag "product[unit_price]","",:placeholder => "Precio unitario",:readonly => true,:class => "right prices",:size => "11" %>
        </td>
        <td class="total_price right">
          <p id="product_total_price_currency" class="like_input"></p>
          <%= hidden_field_tag "product[total_price]","",:placeholder => "Precio total",:readonly => true,:class => "right prices",:size => "11" %>
        </td>
        <td class="center">
          <%#= link_to_function(image_tag("icons/calculator.png"),"$('#product_product_id').blur()")  %>
          <%= link_to_remote image_tag("icons/add.png"), :url => add_product_backend_budgets_url,:with => "$('#item_product_form input, #item_product_form textarea').serialize()",:html => {:id => "add_product_button",:class => "hidden"} %>
        </td>
      </tr>
    </thead>
    <tbody id="product_by_budgets_items">
      <%= render :partial => "product_by_budgets" %>
    </tbody>
  </table>
</div>

