<%= include_javascript("jquery.dataTables.min.js") %>
<%= include_stylesheet("jquery.datatable.css") %>
<div class="actionsBar right no-print">
  <%= link_to(image_tag("icons/arrow_left.png"),backend_cpanel_home_index_url,:class => "button",:title => "Regresar") %>
  |
  <%= link_to(image_tag("icons/add.png"),new_backend_cpanel_module_url,:class => "button") %>
</div>
<hr/>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="modules" width="100%">
	<thead>
		<tr>
			 <th><%= ConfigPanel::Module.human_attribute_name("id")%> </th>
			 <th><%= ConfigPanel::Module.human_attribute_name("name")%> </th>
			 <th><%= ConfigPanel::Module.human_attribute_name("config_panel_module_category")%> </th>
			 <th><%= ConfigPanel::Module.human_attribute_name("orden")%> </th>
		</tr>
	</thead>
	<tbody>
	  <% @modules.each do |modul|  %>
       
		 <tr class="external-overlay" onclick="window.location.href='<%= backend_cpanel_module_url(modul) %>'">
				<td class="left"><%= modul.id.to_code%> </td>
				<td class="left"><%= modul.name%> </td>
				<td class="left"><%= modul.config_panel_module_category.name%></td>
				<td class="left"><%= modul.orden%></td>
		  </tr>
		<% end %>
	</tbody>
</table>



<script type="text/javascript">
  var oTable;

  $(document).ready(function() {
		oTable =  $('#modules').dataTable({
            oLanguage: {
                sUrl: "/javascripts/i18n/jquery.DataTables-es.txt"
            }
        });
  });

</script>