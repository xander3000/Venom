<style type="text/css">
  #content_info_voucher table label{
	 width: 150px;
}
</style>

<div style="border: 1px solid #D2D2D2">
  <div id="content_info_voucher">
	 <div class="subc c55l">
		<div class="border header">
		  <h2><%= COMPANY_NAME.upcase %></h2>
		  <b><%= COMPANY_IDENTIFICATION_DOCUMENT.upcase %></b><br/>
		  <b><%= COMPANY_PHONE.upcase %></b>
		</div>
	 </div>
	 <div class="subc c40r left">
		<div class="border">
		  <h2>PEDIDO DE COMPRA</h2>
		  <br/>
		  <h2>NÂº <b class="red">PC-<%= @quotation_requisition.id.to_code  %> </b></h2>
		</div>
	 </div>
	 <br/>

	 <table cellspacing="0" class="border">
		  <thead>
			 <tr>
				<th class="border-top-left border-top-right"><b>INFORMACION DE LA COTIZACION</b></th>
			 </tr>
		  </thead>
		 <tbody>
			<tr>
			  <td class="border-bottom-left border-bottom-right">
				 <label><%= Material::QuotationRequisition.human_attribute_name("create_by")%>:</label><h2><%= @quotation_requisition.create_by.name%></h2>
				 <label><%= Material::QuotationRequisition.human_attribute_name("posting_date")%>:</label> <b><%= l @quotation_requisition.posting_date.to_date%></b><br/>
				 <label><%= Material::QuotationRequisition.human_attribute_name("delivery_date")%>:</label> <b><%= l @quotation_requisition.delivery_date.to_date%></b><br/>
				 <label><%= Material::QuotationRequisition.human_attribute_name("completed")%>:</label> <b class="green"><%= @quotation_requisition.completed ? "SI" : "NO" %></b><br/>
			  </td>
			</tr>
	 </tbody>
	 </table>
	 <br/>
	 <table>
		<thead>
		  <tr>
			 <th class="center" style="width: 10px">ITEM</th>
			 <th class="left">CODIGO</th>
			 <th class="left">DESCRIPCION</th>
			 <th class="left">CANTIDAD</th>
			 <th class="center">PROVEEDOR 1</th>
			 <th class="center">TOTAL PROV. 1</th>
			 <th class="center">PROVEEDOR 2</th>
			 <th class="center">TOTAL PROV. 2</th>
			 <th class="center">PROVEEDOR 3</th>
			 <th class="center">TOTAL PROV. 3</th>
			 <th class="center">PROVEEDOR SELECCIONADO</th>
			 <th class="center">OBSERVACION</th>
		  </tr>
		</thead>
		<tbody class="items">
				<%
					 item = 0
					 @quotation_requisition_positions.each do |position|
					 item += 1
				%>
				<tr>
				  <% material_raw_material = position.material_raw_material  %>
				  <td class="center"><%= item%></td>
				  <td><%= material_raw_material.id.to_code  %></td>
				  <td><%= material_raw_material.name  %></td>
				  <td class="center"><%= position.quantity  %></td>
				  <td class="center"><%= position.supplier_1 ? position.supplier_1.name : "N/S"  %></td>
				  <td class="right"><%= position.total_supplier_1.to_currency  %></td>
				  <td class="center"><%= position.supplier_2 ? position.supplier_2.name : "N/S"  %></td>
				  <td class="right"><%= position.total_supplier_2.to_currency  %></td>
				  <td class="center"><%= position.supplier_3 ? position.supplier_3.name : "N/S"  %></td>
				  <td class="right"><%= position.total_supplier_3.to_currency  %></td>
				  <td class="center"><%= position.selected_supplier ? position.selected_supplier.name : "N/S"  %></td>
				  <td class="center"><%= position.note%></td>
				</tr>
			 <% end %>
		</tbody>
	 </table>
	 <div>
		<div class="subc c50l">
		 
		</div>
		<div class="subc c50r">
		  <table style="margin-top: 5px;">
			 <thead>
				<tr>
				  <th>CANTIDAD DE ITEMS</th>
				  <th>SUB TOTAL</th>
				  <th>IMPUESTOS</th>
				  <th>TOTAL</th>
				</tr>
			 </thead>
			 <tbody>
				<tr>
				  <td class="center"><%= item%> </td>
				  <td class="right "><%= @quotation_requisition.sub_total.to_currency(false)%></td>
				  <td class="right "><%= @quotation_requisition.tax.to_currency(false)%></td>
				  <td class="right highlight"><%= @quotation_requisition.total.to_currency%></td>
				</tr>
			 </tbody>
		  </table>
		</div>
	 </div>
	 <table>
		<thead>
		  <tr class="center">
			 <td>
				OBSERVACIONES
			 </td>
		  </tr>
		</thead>
		<tbody>
		  <tr>
			 <td><%= @quotation_requisition.note.upcase%></td>
		  </tr>
		</tbody>
	 </table>
<br/>
  <div class="footer">
	 <div class="subc c50l">
		<table>
		  <thead>
		  <tr>
			 <th>
				Preparado
			 </th>
			 <th>
				Aprobado
			 </th>
			 <th>
				Contabilizado
			 </th>
			 <th>
				Revisado
			 </th>
		  </tr>
		  </thead>
		  <tbody>
			 <tr>
				<td><br/><br/><br/></td>
				<td></td>
				<td></td>
				<td></td>
			 </tr>
		  </tbody>
		</table>
	 </div>
	 <div class="subc c50r">
		<div class="border">
		  <b>RECIBIDO:</b>
		  <br/>
		  <br/>
		  <br/>
		  <hr/>
		  CI:
		</div>
	 </div>
  </div>


  </div>
</div>
