<div style="border: 1px solid #D2D2D2">
  <div id="content_info_voucher">
	 <div class="subc c55l">
		<div class="border header">
		  <h2><%= COMPANY_NAME.upcase %></h2>
		  <b><%= COMPANY_IDENTIFICATION_DOCUMENT.upcase %></b><br/>
		  <b><%= COMPANY_PHONE.upcase %></b>
		</div>
	 </div>
	 <div class="subc c40r left">
		<div class="border">
		  <h2><%= @goods_movement.material_goods_movement_type.name.upcase%> </h2>
		  <br/>
		  <h2>Nº <b class="red">MM-<%= @goods_movement.id.to_code  %> </b></h2>
		</div>
	 </div>
	 <br/>

	 <table cellspacing="0" class="border">
		  <thead>
			 <tr>
				<th class="border-top-left"><b>INFORMACION DEL PROVEEDOR</b></th>
				<th>FECHA</th>
				<th class="border-top-right"><%= Material::GoodsMovement.human_attribute_name("create_by").upcase%></th>
			 </tr>
		  </thead>
		 <tbody>
			<tr>
			  <td rowspan="5" class="border-bottom-left">
				 <%	supplier = @goods_movement.supplier
						contact   = supplier.contact
				  %>
				 <h2><%= supplier.name%></h2>
				 <label>Doc Nº:</label> <b><%= supplier.identification_document.upcase  %></b><br/>
				 <label>Contacto:</label> <b><%= supplier.person_name_contact.to_s.upcase%></b><br/>
				 <label>Dirección:</label> <b><%= contact.address.upcase%></b><br/>
				 <label>Teléfono:</label> <b><%= contact.phone.upcase%></b><br/>
				 <label>Correo:</label> <b><%= contact.email.upcase%></b><br/>
			  </td>
			  <td class="center">
					 <%= l  @goods_movement.posting_date .to_date %>
			  </td>
			  <td class="right">
					 <%= @goods_movement.create_by.name%>
			  </td>
			</tr>
		  <tr>
			 <td class="header" colspan="2"><%= Material::GoodsMovement.human_attribute_name("material_goods_movement_reason").upcase%> </td>
		  </tr>
		  <tr class="center">
			 <td colspan="2"><%= @goods_movement.material_goods_movement_reason.name%></td>
		  </tr>
			<tr>
			  <td class="header" colspan="2"><%= Material::GoodsMovement.human_attribute_name("doc").upcase%></td>
			</tr>
			<tr>
			  <td class="highlight center" colspan="2"><%= @goods_movement.doc.id.to_code%></td>
			</tr>
	 </tbody>
	 </table>
	 <br/>
	 <table>
		<thead>
		  <tr>
			 <th class="center" style="width: 10px">ITEM</th>
			 <th class="left">CODIGO</th>
			 <th class="left">DESCRIPCION</th>
			 <th class="right">CANTIDAD</th>
		  </tr>
		</thead>
		<tbody class="items">
				<%
					 item = 0
					 @goods_movement_positions.each do |position|
					 item += 1
				%>
				<tr>
				  <% material_raw_material = position.material_raw_material  %>
				  <td class="center"><%= item%></td>
				  <td><%= material_raw_material.id.to_code  %></td>
				  <td><%= material_raw_material.name  %></td>
				  <td class="right"><%= position.quantity  %></td>
				</tr>
			 <% end %>
		</tbody>
	 </table>
<br/>
	 <table>
		<thead>
		  <tr class="center">
			 <td>
				OBSERVACIONES
			 </td>
		  </tr>
		</thead>
		<tbody>
		  <tr>
			 <td></td>
		  </tr>
		</tbody>
	 </table>
<br/>
  <div class="footer">
	 <div class="subc c50l">
		<table>
		  <thead>
		  <tr>
			 <th>
				Preparado
			 </th>
			 <th>
				Aprobado
			 </th>
			 <th>
				Contabilizado
			 </th>
			 <th>
				Revisado
			 </th>
		  </tr>
		  </thead>
		  <tbody>
			 <tr>
				<td><br/><br/><br/></td>
				<td></td>
				<td></td>
				<td></td>
			 </tr>
		  </tbody>
		</table>
	 </div>
	 <div class="subc c50r">
		<div class="border">
		  <b>RECIBIDO:</b>
		  <br/>
		  <br/>
		  <br/>
		  <hr/>
		  CI:
		</div>
	 </div>
  </div>


  </div>
</div>
