<%= include_javascript("jquery.dataTables.min.js") %>
<%= include_stylesheet("jquery.datatable.css") %>
<div class="actionsBar right no-print">
  <%= link_to(image_tag("icons/arrow_left.png"),backend_cpanel_home_index_url,:class => "button",:title => "Regresar") %>
  |
  <%= link_to(image_tag("icons/add.png"),new_backend_material_management_production_order_url,:class => "button") %>
</div>
<hr/>
<table cellpadding="0" cellspacing="0" border="0" class="display" id="concepts" width="100%">
	<thead>
		<tr>
			 <th><%= Material::ProductionOrder.human_attribute_name("id")%> </th>
			 <th><%= Material::ProductionOrder.human_attribute_name("material_production_orden_type")%> </th>
			 <th><%= Material::ProductionOrder.human_attribute_name("requesting_unit")%> </th>
			 <th><%= Material::ProductionOrder.human_attribute_name("delivery_date")%> </th>
			 <th><%= Material::ProductionOrder.human_attribute_name("description")%> </th>


		</tr>
	</thead>
	<tbody>
	  <% @production_orders.each do |production_order|  %>

          <tr class="external-overlay" rel=".overlay" ref=""  onclick="window.location.href='<%= backend_material_management_production_order_url(production_order) %>'">
				<td class="left"><%= production_order.id.to_code%> </td>
				<td class="left"><%= production_order.material_production_orden_type.name%> </td>
				<td class="left"><%= production_order.requesting_unit.name%> </td>
				<td class="center"><%= l production_order.delivery_date.to_date %> </td>
				<td class="center"><%= production_order.description %></td>
		  </tr>
		<% end %>
	</tbody>
</table>




<script type="text/javascript">
  var oTable;

  $(document).ready(function() {
		oTable =  $('#concepts').dataTable({
            oLanguage: {
                sUrl: "/javascripts/i18n/jquery.DataTables-es.txt"
            }
        });
  });

</script>