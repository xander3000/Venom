    <div class="c23l subc">
      <div id="product_image_form">
        <%= image_tag "buttons/upload_image.jpg" %>
      </div>
    </div>
    <div class="c70r subc">
        <%=  f.input :name,:label => false,:input_html => {:placeholder => "Ingrese Nombre Producto",:class => "top"} %>
