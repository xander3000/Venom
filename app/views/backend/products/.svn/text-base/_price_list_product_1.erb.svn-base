<% semantic_fields_for @price_list_product do |p| %>
  <% p.inputs "Precio" do  %>

    <div id="price_list_product">
      <div class="c20l subc">
        <%= p.input :amount,:label => false,:input_html => {:class => "right"} %>
      </div>
      <div class="c17l subc">
        <%= p.input :lower_limit ,:label => false,:input_html => {:class => "right",:size => 3,:title => "Limite o rango inferior en ventas del producto"} %>
      </div>
      <div class="c10l subc">
        <%= p.input :upper_limit ,:label => false,:input_html => {:class => "right",:size => 4,:title => "Limite o rango superior  en ventas del producto. "} %>
      </div>
      <div class="c26l subc">
        <%= p.input  :price_list,:label => false,:input_html => {:title => "Lista de precios"} %>
      </div>
      <div class="c15r subc">
        <%=  link_to_remote "+",:url => add_price_list_product_backend_products_url,:with => "$('#price_list_product input,#price_list_product select').serialize()",:html => {:id =>"add_price_list_product" ,:class => "button"},:confirm => "Â¿Esta seguro que desea agragr este item?"%>
      </div>
    </div>
  <% end %>
<% end %>
