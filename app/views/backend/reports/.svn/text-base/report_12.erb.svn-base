<div id="container"></div>


<script type="text/javascript">
  $(function () {
       var chart;
    $(document).ready(function() {
        <%=
          last_months = Time.now.months_since_to_now(6).inspect
          categories = RawMaterial.all.map(&:name).uniq.inspect
        %>

        var colors = Highcharts.getOptions().colors,
        categories = <%= categories  %>,
            name = 'Clientes',
            data = [{
                    y: 55.11,
                    color: colors[0],
                    drilldown: {
                        name: '<%= categories.split("\"")[1] %>',
                        categories: <%= last_months%>,
                        data: [10.85, 7.35, 3.06, 2.81,10.4,5.2,4.9],
                        color: colors[0]
                    }
                }, {
                    y: 21.63,
                    color: colors[1],
                    drilldown: {
                        name: '<%= categories.split("\"")[3] %>',
                        categories: <%= last_months%>,
                        data: [0.20, 0.83, 1.58, 13.12, 5.43,0.9],
                        color: colors[1]
                    }
                }, {
                    y: 11.94,
                    color: colors[2],
                    drilldown: {
                        name: '<%= categories.split("\"")[5] %>',
                        categories: <%= last_months%>,
                        data: [0.12, 0.19, 0.12, 0.36, 0.32, 9.91],
                        color: colors[2]
                    }
                }, {
                    y: 7.15,
                    color: colors[3],
                    drilldown: {
                        name: '<%= categories.split("\"")[7] %>',
                        categories: <%= last_months%>,
                        data: [4.55, 1.42, 0.23, 0.21, 0.20, 0.24],
                        color: colors[3]
                    }
                }, {
                    y: 2.14,
                    color: colors[4],
                    drilldown: {
                        name: '<%= categories.split("\"")[9] %>',
                        categories: <%= last_months%>,
                        data: [ 0.12, 0.37, 0.65,0.22,0.15,0.36],
                        color: colors[4]
                    }
                }, {
                    y: 9.25,
                    color: colors[5],
                    drilldown: {
                        name: '<%= categories.split("\"")[11] %>',
                        categories: <%= last_months%>,
                        data: [ 0.12, 0.37, 0.65,0.22,0.15,0.36],
                        color: colors[5]
                    }
                }, {
                    y: 2.14,
                    color: colors[6],
                    drilldown: {
                        name: '<%= categories.split("\"")[13] %>',
                        categories: <%= last_months%>,
                        data: [ 0.12, 0.37, 0.65,0.22,0.15,0.36],
                        color: colors[6]
                    }
                }, {
                    y: 6.04,
                    color: colors[7],
                    drilldown: {
                        name: '<%= categories.split("\"")[15] %>',
                        categories: <%= last_months%>,
                        data: [ 0.12, 0.37, 0.65,0.22,0.15,0.36],
                        color: colors[7]
                    }
                }, {
                    y: 8.14,
                    color: colors[8],
                    drilldown: {
                        name: '<%= categories.split("\"")[17] %>',
                        categories: <%= last_months%>,
                        data: [ 0.12, 0.37, 0.65,0.22,0.15,0.36],
                        color: colors[8]
                    }
                }];

        function setChart(name, categories, data, color) {
			chart.xAxis[0].setCategories(categories, false);
			chart.series[0].remove(false);
			chart.addSeries({
				name: name,
				data: data,
				color: color || 'white'
			}, false);
			chart.redraw();
        }

        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'column'
            },

            title: {
                text: 'Porcentaje de participaci√≥n de cada cliente'
            },
            xAxis: {
                categories: categories
            },
            yAxis: {
                title: {
                    text: '% de participacion'
                }
            },
            plotOptions: {
                column: {
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function() {
                                var drilldown = this.drilldown;
                                if (drilldown) { // drill down
                                    setChart(drilldown.name, drilldown.categories, drilldown.data, drilldown.color);
                                } else { // restore
                                    setChart(name, categories, data);
                                }
                            }
                        }
                    },
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'bold'
                        },
                        formatter: function() {
                            return this.y +'%';
                        }
                    }
                }
            },

            series: [{
                name: name,
                data: data,
                color: 'white'
            }]
        });
    });

});
</script>


