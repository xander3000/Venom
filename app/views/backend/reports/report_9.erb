<div id="container"></div>


<script type="text/javascript">
  $(function () {
       var chart;
    $(document).ready(function() {
        <%=
          last_months = Time.now.months_since_to_now(6).inspect
          categories =  Supplier.all.map(&:name).uniq.inspect
        %>

        var colors = Highcharts.getOptions().colors,
        categories = <%= categories  %>,
            name = 'Clientes',
            data = [{
                    y: 55.11,
                    color: colors[0],
                    drilldown: {
                        name: '<%= categories.split("\"")[1] %>',
                        categories: <%= last_months%>,
                        data: [8.85, 5.35, 3.06, 1.81,10.4,4.2,5.9],
                        color: colors[0]
                    }
                }, {
                    y: 21.63,
                    color: colors[1],
                    drilldown: {
                        name: '<%= categories.split("\"")[3] %>',
                        categories: <%= last_months%>,
                        data: [1.20, 1.83, 1.58, 12.12, 5.43,1.9],
                        color: colors[1]
                    }
                }, {
                    y: 5.94,
                    color: colors[2],
                    drilldown: {
                        name: '<%= categories.split("\"")[5] %>',
                        categories: <%= last_months%>,
                        data: [1.12, 1.19, 0.12, 1.36, 1.32, 8.91],
                        color: colors[2]
                    }
                }, {
                    y: 4.94,
                    color: colors[3],
                    drilldown: {
                        name: '<%= categories.split("\"")[7] %>',
                        categories: <%= last_months%>,
                        data: [1.12, 1.19, 0.12, 1.36, 1.32, 8.91],
                        color: colors[3]
                    }
                    }, {
                    y: 1.94,
                    color: colors[4],
                    drilldown: {
                        name: '<%= categories.split("\"")[9] %>',
                        categories: <%= last_months%>,
                        data: [1.12, 1.19, 0.12, 1.36, 1.32, 8.91],
                        color: colors[4]
                    }
                    }];

        function setChart(name, categories, data, color) {
			chart.xAxis[0].setCategories(categories, false);
			chart.series[0].remove(false);
			chart.addSeries({
				name: name,
				data: data,
				color: color || 'white'
			}, false);
			chart.redraw();
        }

        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'column'
            },

            title: {
                text: 'Porcentaje de participaci√≥n de cada cliente'
            },
            xAxis: {
                categories: categories
            },
            yAxis: {
                title: {
                    text: '% de participacion'
                }
            },
            plotOptions: {
                column: {
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function() {
                                var drilldown = this.drilldown;
                                if (drilldown) { // drill down
                                    setChart(drilldown.name, drilldown.categories, drilldown.data, drilldown.color);
                                } else { // restore
                                    setChart(name, categories, data);
                                }
                            }
                        }
                    },
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'bold'
                        },
                        formatter: function() {
                            return this.y +'%';
                        }
                    }
                }
            },

            series: [{
                name: name,
                data: data,
                color: 'white'
            }],
            exporting: {
                          buttons:
                          {
                             popUpBtn: {
                               symbol: 'url(<%= image_path("icons/page_excel.png")%>)',
                                x: -62,
                                symbolFill: '#B5C9DF',
                                hoverSymbolFill: '#779ABF',
                                _titleKey: 'Exportar a Excel',
                                onclick: function() {
                                    window.location="<%= export_report_2_backend_reports_url %>";
                                }
                              }
                          }

                }
        });
    });

});
</script>


