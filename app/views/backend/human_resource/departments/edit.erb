<div class="actionsBar right no-print">
<%= link_to(image_tag("icons/arrow_left.png"),backend_human_resource_department_url(@payroll_department),:class => "button",:title => "Regresar") %>
</div>
<hr/>
<div>
  <% semantic_form_remote_for @payroll_department, :update => "#{controller.controller_name}_container",:url => backend_human_resource_department_url(@payroll_department),:html => {:class => "form_generate"} do |f| %>
  <div class="">
	 <%= render :partial => "form",:locals => {:f => f} %>
  </div>
    <%= link_to_function "ACTUALIZAR","generate()", :disable_with => "Por favor espere...",:id => "contable_document-button",:class => "button" %>
  <% end %>
</div>

<script type="text/javascript">
        function generate()
        {
          result = confirm("¿Esta seguro de ejecutar esta acción?")
          if (result)
            $(".form_generate").submit();
        }

</script>