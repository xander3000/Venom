<div id="detail_incoming_invoice">
  <div class="headerWrap">
    <div class="headerWrapContent">
		<h2>Modificación de salario</h2>
    </div>
  </div>
  <div class="mainWrapContent">
	   <% semantic_form_remote_for @historical_wage_adjustment, :update => "#{controller.controller_name}_container",:url => backend_human_resource_employee_add_historical_wage_adjustment_url(@payroll_employee),:html => {:class => "form_generate"} do |f| %>
			 <div>
				
				  <% f.inputs do %>
					
					 <%= f.input :payroll_employee,:wrapper_html => {},:input_html => {:disabled => true} %>
					 <%= f.input :user,:wrapper_html => {},:input_html => {:disabled => true} %>
					 <%= f.input :old_salary,:wrapper_html => {},:input_html => {:disabled => true,:class => "amount"} %>
					 <%= f.input :new_salary,:wrapper_html => {},:input_html => {:class => "amount"} %>
                                         <%= f.input :date,:wrapper_html => {},:input_html => {:class => "date"} %>
                                         <%= f.input :comment,:wrapper_html => {},:input_html => {} %>


				  <% end %>
			
			 </div>
		<% end %>


  </div>

  <div class="footerWrap">
    <div class="footerWrapContent right">
      <%= button_to_function("Añadir", "$(\"#new_payroll_historical_wage_adjustment\").submit()")  %>

    </div>
  </div>

</div>



<script type="text/javascript">



    $(document).ready(function(){
      $("button, input:submit,input:button,a.button ").button();
      amount_keypress();
      $(".date").datepicker({
                    changeMonth: true,
                    dateFormat: 'yy-mm-dd',
                    minDate: "-15",
                    maxDate: "+35",
                    yearRange: 'c-80:c+30'
        });
      });
</script>