<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="es" lang="es">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf8"/>
  <title><%= SITE_NAME %></title>
  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

  <%= stylesheet_link_tag "formtastic"%>
  <%= stylesheet_link_tag "formtastic_changes"%>
  <%= stylesheet_link_tag "backend/application"%>

  <%= stylesheet_link_tag "jquery-ui/smoothness/jquery-ui-1.8.14.custom"%>
  <%= stylesheet_link_tag "jquery-ui_hacks/smoothness/jquery-ui-1.8.14.custom"%>
  <%= stylesheet_link_tag "backend/#{controller.controller_name}"  %>
  <%= stylesheet_link_tag "states"%>
  <%= stylesheet_link_tag "jquery.overlay"  %>
  <%= stylesheet_link_tag "jquery.notifyBar" %>
  <!--yield head_stylesheet-->
    <%= yield :head_stylesheet %>
  <!--yield head_stylesheet-->

  <!--[if lte IE 7]>
  <![endif]-->

  <%= javascript_include_tag "jquery.min" %>

  <%= javascript_include_tag "jrails" %>
  <%= javascript_include_tag "jquery-ui-1.8.14.min" %>
  <%= javascript_include_tag "jquery.tools.min" %>
  <%= javascript_include_tag "jquery.ui.datepicker-es" %>
  <%= javascript_include_tag "backend/application" %>
  <%= javascript_include_tag "jquery.maskedinput-1.3.min" %>
  <%= javascript_include_tag "jquery.jshashtable-2.1.min" %>
  <%= javascript_include_tag "jquery.numberformatter.min" %>
  <%= javascript_include_tag "jquery.highlightFade.min" %>
  <%= javascript_include_tag "jquery.notifyBar" %>
  <!--yield head_javascript-->
    <%= yield :head_javascript %>
  <!--yield head_javascript-->

</head>
<body>
      <!-- begin: #loading -->
      <div style=" " id="loading">
            <%= image_tag "global/loading.gif" %>
      </div>
      <!-- end: #loading -->
      
      <!-- begin: #topnav -->
      <!-- end: #topnav -->

      <!-- begin: #header -->
      <div id="header">
        <div class="content">
          <div>
            <div class="c30l subc">
              <%= image_tag "clients/#{PROJECT_NAME}/logos/logo3.png" %>
            </div>

          </div>
        </div>
      </div>
      <!-- end: #header -->

      <!-- begin: #main -->
      <div id="main">
        <div class="content-block">
          <div class="block-left block">
            <div class="container">
              <div class="content">
                <%= yield :main_content_block_left  %>
              </div>
            </div>
          </div>
          <div class="block-center block">
            <div class="container">
              <div class="top">
                <div class="content">
                  <span><%= @title %></span>
                </div>
              </div>
              <div class="content">
                <%= yield  %>
              </div>
              
            </div>
          </div>
          <div class="block-right block">
            <div class="container">
              <div class="content">
                <%= yield :main_content_block_right  %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end: #main -->
      
      <!-- begin: #overlay -->
      <div class="overlay">
        <a class="close button ">X</a>
        <div class="contentWrap"></div>
      </div>
      <!-- end: #overlay -->
      <script type="text/javascript">
       $(document).ready(function() {
          <% if flash[:notice] %>
            $.notifyBar({
              html: "<%= flash[:notice] %>",
              delay: 3000,
              animationSpeed: "normal",
              cls: "success"
            });
          <% end %>
            <% if flash[:error] %>
              $.notifyBar({
                html: "<%= flash[:error] %>",
                delay: 3000,
                animationSpeed: "normal",
                cls: "error"
              });
            <% end %>
      });
      </script>

  <!-- begin: #footer -->
  <div id="footer">
  </div>
  <!-- end: #footer -->
</body>
</html>
