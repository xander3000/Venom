@import "home_slide.css";

#venom-news-feed{
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        height: 29px;
        margin-top: -33px;
        position: relative;
    }

    #venom-news-feed-inner {
        border-top: #ccc 1px solid;
        /*background:  rgba(82, 82, 82, 0.698) !important;*/	
		  background: #000 !important;
    }

	 #venom-news-feed-inner > ul{
	 margin: 0;
	}

	 #venom-news-feed-inner > ul > li{
		display: inline-block;
	 }

	 #venom-news-feed-inner p {
        color: #000000;
        font-weight: bold;
        padding: 5px 10px;
        text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
        font-size: 75%;
    }

    #venom-news-feed-inner.venom-alternate p {
        color: #FFFFFF;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5);
    }

	 #venom-alternate-first{
		position: relative;
		top: -4px;
	 }

    #venom-news-feed p span{
        font-weight: normal;
        color: #FFF;
    }

    #venom-news-feed p span a{
        color: #FFF;
        text-decoration: none;
    }

    #venom-news-feed p span a:hover{
        text-decoration: underline;
    }


    #venom-news-feed #venom-news-feed-data {
        display: inline;
        list-style-type: none;
        margin: 0 4px;
        padding: 0;
    }

    #venom-news-feed #venom-news-feed-data li {

        display: inline;
        padding: 0;
        clear: left;
        height: 1%;
        padding: 5px 0 5px 8px;
    }

    #venom-promotion-module{
        padding: 5px 0;

        border-top: 1px solid white;
        border-bottom: 0px none;
        border-right: 0px none;
        border-left: 0px none;
        background: url(/images/backgrounds/box_gradient_lm.png) top left no-repeat, url(/images/backgrounds/box_gradient_rm.png) top right no-repeat, -o-linear-gradient(center top, white, white) repeat;
        background: url(/images/backgrounds/box_gradient_lm.png) top left no-repeat, url(/images/backgrounds/box_gradient_rm.png) top right no-repeat, -webkit-gradient(linear, left top, left bottom, from(white), to(white));
        background: url(/images/backgrounds/box_gradient_lm.png) top left no-repeat, url(/images/backgrounds/box_gradient_rm.png) top right no-repeat, -moz-linear-gradient(center top, white, white) repeat;
        background: url(/images/backgrounds/box_gradient_lm.png) top left no-repeat, url(/images/backgrounds/box_gradient_rm.png) top right no-repeat, -o-linear-gradient(center top, white, white) repeat;
        margin: 0px;
    }

    #venom-promotion-module div.scrollable {
	position:relative;
	overflow:hidden;
	width: 990px;
	height:110px;
        padding-top: 10px;
    }

    #venom-promotion-module div.scrollable .items {

            width:20000em;
            position:absolute;
    }

    #venom-promotion-module div.scrollable div.items div {
            float:left;
    }

     #venom-promotion-module div.scrollable div a {
        background-color: #FFFFFF;
        border-radius: 2px 2px 2px 2px;
        display: block;
        height: 98px;
        margin: 0 5px;
        padding: 1px;
        width: 318px;
    }
    #venom-promotion-module div.scrollable div a{
        box-shadow: 0 1px 5px #999999;
        filter: progid:DXImageTransform.Microsoft.Shadow(color=#666666, strength=3, direction=135);
        -moz-box-shadow : 0px 1px 5px #999;
        -webkit-box-shadow: 0px 1px 5px #999;
    }

    #venom-promotion-module div.scrollable div a:hover, #venom-promotion-module div.scrollable div a:focus{
        box-shadow: 0 1px 10px #666666;
        filter: progid:DXImageTransform.Microsoft.Shadow(color=#333333, strength=3, direction=135);
        -moz-box-shadow: 0px 1px 10px #666;
        -webkit-box-shadow: 0px 1px 10px #666;

    }

    #venom-promotion-scrollable a.browse {
        background: url("/images/buttons/scroll_nav_sprite.gif") no-repeat scroll 0 0 transparent;
        cursor: pointer;
        display: block;
        font-size: 0;
        height: 70px;
        position: absolute;
        text-indent: -9999em;
        width: 10px;
    }
    #venom-promotion-scrollable a.disabled{
        display: none;
    }


    #venom-promotion-scrollable a.left {
        background-position: 0 -75px;
        left: -15px;
        margin-top: 25px;
    }

    #venom-promotion-scrollable a.left:hover{
        background-position: 0 -125px;
    }

    #venom-promotion-scrollable a.right:hover{
        background-position: 100% -25px;
    }

    #venom-promotion-scrollable a.right {
        background-position: 100% 25px;
        margin-top: -95px;
        right: -15px;
    }



    #venom-promotion-scrollable {
        height: 135px;
    }

    #venom-s-cntr {
        width: auto;
        margin: auto;
        padding: inherit;
        background: none;
    }

    #venom-pcon {
        margin: 0 auto;
        padding: 0;
        width: 100%;
    }

    #venom-navigation{
        display: none;
    }

    #venom-leadspace-body{
        height: auto;
        width: auto;
    }

    


